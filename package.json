{
    "name": "angular-webpack-quick-start",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "webpack-dev-server --inline --progress --port 8080",
        "build": "npm run clean:dist && webpack --config webpack/webpack.prod.js --progress --profile --bail",
        "build:aot": "npm run clean:dist && npm run ngc && webpack --config webpack/webpack.prod.aot.js --progress --profile --bail",
        "clean:ngc": "npm run ckean:ngc:folder && npm run clean:ngc:js && npm run clean:ngc:map && npm run clean:ngc:ts && npm run clean:ngc:stylets && npm run clean:ngc:json",
        "clean:dist": "rimraf ./dist",
        "clean:ngc:js": "rimraf src/**/*.js ",
        "clean:ngc:map": "rimraf src/**/*.map",
        "clean:ngc:ts": "rimraf src/**/*.ngfactory.ts",
        "clean:ngc:stylets": "rimraf src/**/*.shim.ngstyle.ts",
        "clean:ngc:json": "rimraf src/**/*.json",
        "ckean:ngc:folder": "rimraf ./src/node_modules && rimraf ./src/app/ngfactory",
        "ngc": "ngc -w -p tsconfig.aot.json"
    },
    "bin": {
        "rimraf": "./bin/rimraf",
        "ngc": "./bin/ngc"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@angular/animations": "^4.3.1",
        "@angular/common": "^4.3.1",
        "@angular/compiler": "^4.3.1",
        "@angular/compiler-cli": "^4.3.1",
        "@angular/core": "^4.3.1",
        "@angular/forms": "~4.0.0",
        "@angular/http": "~4.0.0",
        "@angular/platform-browser": "^4.3.1",
        "@angular/platform-browser-dynamic": "~4.0.0",
        "@angular/platform-server": "^4.3.1",
        "@angular/router": "~4.0.0",
        "core-js": "^2.4.1",
        "rxjs": "5.0.1",
        "typescript": "~2.2.1",
        "zone.js": "^0.8.4"
    },
    "devDependencies": {
        "@ngtools/webpack": "^1.5.4",
        "@types/core-js": "^0.9.42",
        "@types/node": "^6.0.45",
        "angular2-template-loader": "^0.6.0",
        "awesome-typescript-loader": "^3.0.4",
        "css-loader": "^0.26.1",
        "extract-text-webpack-plugin": "2.0.0-beta.5",
        "file-loader": "^0.9.0",
        "html-loader": "^0.4.3",
        "html-webpack-plugin": "^2.16.1",
        "install": "^0.10.1",
        "npm": "^5.3.0",
        "null-loader": "^0.1.1",
        "raw-loader": "^0.5.1",
        "rimraf": "^2.6.1",
        "style-loader": "^0.13.1",
        "typescript": "~2.0.10",
        "webpack": "2.2.1",
        "webpack-dev-server": "2.4.1",
        "webpack-merge": "^3.0.0"
    }
}